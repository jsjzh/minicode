{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "importHelpers": true,
    "listEmittedFiles": true,
    "resolveJsonModule": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    // "paths": {
    //   "@/*": ["./core/*"]
    // },

    "baseUrl": "./",
    "outDir": "./src",
    "rootDir": "./core",

    "declaration": true,
    "declarationDir": "./typings"
  },
  "include": ["./core/**/*.ts"]
}
